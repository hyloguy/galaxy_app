<%= form_for(@user, html: {role: 'form', :class => "col-sm-7"}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :handle, :class => 'control-label' %>
    <%= f.text_field :handle, :class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :password, :class => 'control-label' %>
    <%= f.password_field :password, :class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :email, :class => 'control-label' %>
    <%= f.text_field :email, :class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :planet_id, :class => 'control-label' %>
    <%= f.select :planet_id,
                 Planet.all.collect {|p| [ p.name, p.id ] },
                 {prompt: 'Select Home Planet'},
                 {:class => "form-control"} %>
  </div>
  <div class="actions form-group">
    <%= f.submit nil, :class => "btn btn-default" %>
  </div>
<% end %>
