<!-- app/views/shared/_navigation.html.erb -->

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- <a class="navbar-brand" href="#">InterstellaReddit</a> -->
      <%= link_to 'InterstellaReddit', root_path, :class => "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class=<%= 'active' if controller_name == 'posts' %>><%= link_to 'Posts', posts_path %></li>
        <li class=<%= 'active' if controller_name == 'users' %>><%= link_to 'Users', users_path %></li>
        <li class=<%= 'active' if controller_name == 'planets' %>><%= link_to 'Planets', planets_path %></li>
        <li class=<%= 'active' if controller_name == 'star_systems' %>>
          <%= link_to 'Star Systems', star_systems_path %>
        </li>
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
      <ul class="nav navbar-nav navbar-right">
        <% if session[:current_user_id] %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= @_current_user.handle %> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Settings</a></li>
              <li><a href="#">My Profile</a></li>
              <li><a href="#">Administer Site</a></li>
              <li class="divider"></li>
              <li><a href="#">Logout</a></li>
            </ul>
          </li>
        <% else %>
          <li>
            <button type="button" class="btn btn-default navbar-btn"
             data-toggle="modal" data-target="#login-form">
              Login
            </button>
          </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

  <!-- Modal -->
  <div class="modal fade" id="login-form" tabindex="-1" role="dialog" aria-labelledby="login-form-label" aria-hidden="true">
    <div class="modal-dialog">

      <%= form_tag logins_path, {role: 'form', :class => "modal-content"} do %>
        <div class="modal-header">
          <h4 class="modal-title" id="login-form-label">
            Sign in to InsterstellaReddit
          </h4>
        </div>
        <div class="modal-body">
          <div class="field form-group">
              <%= label_tag :handle, nil, :class => 'control-label' %>
              <%= text_field_tag :handle, nil, :class => 'form-control' %>
          </div>
          <div class="field form-group">
              <%= label_tag :password, nil, :class => 'control-label' %>
              <%= text_field_tag :password, nil, :class => 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="actions form-group">
              <%= submit_tag nil, :class => "btn btn-primary" %>
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          </div>
        </div>
      <% end %>

    </div>
  </div>
