<h1>Listing star_systems</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @star_systems.each do |star_system| %>
      <tr>
        <td><%= star_system.name %></td>
        <td><%= link_to 'Show', star_system %></td>
        <td><%= link_to 'Edit', edit_star_system_path(star_system) %></td>
        <td><%= link_to 'Destroy', star_system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

