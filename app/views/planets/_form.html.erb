<%= form_for @planet do |f| %>

	<% if @planet.errors.any? %>
	<div id="error_explanation">
		<h3>
			<%= pluralize(@planet.errors.count, "error") %> prevented storing this planet:
		</h3>
		<ul>
			<% @planet.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :diameter %><br>
    <%= f.text_field :diameter %>
  </p>
 
  <p>
    <%= f.label :orbit %><br>
    <%= f.text_field :orbit %>
  </p>
 
  <p>
    <%= f.label :star_system %><br>
    <%= f.select :star_system_id,
    						StarSystem.all.collect {|s| [ s.name, s.id ] },
    						prompt: 'Select Star System' %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>